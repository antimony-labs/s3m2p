{
  "name": "github-portfolio",
  "version": "1.0.0",
  "description": "Unified GitHub portfolio website with visibility controls",
  "main": "server.js",
  "scripts": {
    "dev": "next dev",
    "build": "node scripts/generate-stills.js && next build",
    "start": "next start",
    "api": "python backend/app.py",
    "generate-stills": "node scripts/generate-stills.js",
    "test": "vitest run --config ./vitest.config.ts",
    "test:watch": "vitest --config ./vitest.config.ts",
    "test:coverage": "vitest run --coverage --config ./vitest.config.ts",
    "test:unit": "vitest run tests/lib --config ./vitest.config.ts",
    "test:integration": "vitest run tests/integration --config ./vitest.config.ts",
    "test:components": "vitest run tests/components --config ./vitest.config.ts",
    "start:visual": "serve out -l 4173 --single",
    "test:visual": "npm run build && playwright test",
    "test:visual:update": "npm run build && playwright test --update-snapshots",
    "check:hydration": "node scripts/check-hydration.js",
    "test:hydration": "npm run check:hydration",
    "task": "node scripts/cursor-agent.js",
    "issue": "node scripts/work-on-issue.js",
    "merge-pr": "node scripts/merge-pr.js",
    "github:cleanup": "node scripts/github-cleanup.js",
    "keploy:record": "./scripts/keploy-record.sh",
    "keploy:replay": "./scripts/keploy-replay.sh",
    "create-task": "node scripts/create-task.js",
    "worktree": "node scripts/worktree.js",
    "worktrees": "node scripts/worktree.js list",
    "verify-worktree": "./scripts/verify-worktree-setup.sh"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.0",
    "@types/three": "^0.181.0",
    "lucide-react": "^0.552.0",
    "next": "^14.0.0",
    "next-auth": "^4.24.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "three": "^0.181.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@vitest/coverage-v8": "^4.0.7",
    "autoprefixer": "^10.4.0",
    "canvas": "^3.2.0",
    "happy-dom": "^15.11.5",
    "postcss": "^8.4.0",
    "serve": "^14.2.3",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.7"
  }
}
